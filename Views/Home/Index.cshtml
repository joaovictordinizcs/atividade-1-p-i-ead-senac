}
.btnaction{
    height: 50px;
    width: 200px;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #ffbe0b;
    border: none;
    border-radius: 5px;
    
}
.btnaction a{
    text-decoration: none;
    color: black;
}
.img{
    border: solid 1px white;
